{
    "manifest_version": 3,
    "name": "SmartInterviews UI Enhancer",
    "description": "Improves the UI of hive.smartinterviews.in and smartinterviews.in websites",
    "version": "1.0",
    "permissions": ["storage", "activeTab"],
    "host_permissions": [
      "*://*.smartinterviews.in/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.smartinterviews.in/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }